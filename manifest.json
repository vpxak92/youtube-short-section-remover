{
    "manifest_version": 3,
    "name": "YouTube shorts section remover",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/feed/subscriptions*"],
            "run_at": "document_idle",
            "js": ["/content.js"]
        }
    ]
}